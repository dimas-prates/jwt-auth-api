{
  "name": "jwt-auth-api",
  "version": "1.0.0",
  "description": "project destined to learn jwt auth",
  "main": "./build/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dimas-prates/jwt-auth-api.git"
  },
  "author": "Dimas",
  "license": "MIT",
  "engines": {
    "node": "^14.19.x || ^16.x.x"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "autocannon": "^7.10.0",
    "commitizen": "^4.2.5",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        ":sparkles: feat": {
          "description": "A new feature"
        },
        ":adhesive_bandage: fix": {
          "description": "A bug fix"
        },
        ":memo: docs": {
          "description": "Documentation only changes"
        },
        ":pencil2: style": {
          "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)"
        },
        ":recycle: refactor": {
          "description": "A code change that neither fixes a bug nor adds a feature"
        },
        ":zap: perf": {
          "description": "A code change that improves performance"
        },
        ":test_tube: test": {
          "description": "Adding missing tests or correcting existing tests"
        },
        ":package: build": {
          "description": "Changes that affect the build system or external dependencies (example scopes: gulp, broccoli, npm)"
        },
        ":bricks: ci": {
          "description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)"
        },
        ":wrench: chore": {
          "description": "Other changes that don't modify src or test files"
        },
        ":rewind: revert": {
          "description": "Reverts a previous commit"
        }
      }
    }
  },
  "scripts": {
    "dev": "ts-node-dev --transpile-only --respawn --ignore-watch node_modules ./src/server.ts",
    "start": "node ./build/server.js",
    "prebuild": "rimraf ./build",
    "build": "yarn prebuild && tsc",
    "build:prod": "yarn build && rimraf ./src ./tsconfig.json",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/migration",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
    "test": "jest",
    "test:perf": "autocannon -c 500 -d 30 --workers 10 --renderStatusCodes --latency --warmup [ -c 1 -d 2]"
  }
}
