{
  "openapi": "3.0.0",
  "info": {
    "title": "Authentication API",
    "description": "how to operate the authentication",
    "termsOfService": "http://localhost:3000/terms",
    "contact": {
      "name": "Support API",
      "email": "contact@domain.com"
    },
    "x-logo": {
      "url": "https://source.unsplash.com/400x200"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Test API"
    },
    {
      "url": "www.google.com",
      "description": "Production API"
    }
  ],
  "paths": {
    "/products": {
      "post": {
        "summary": "products inputs",
        "description": "this route insert a new product",
        "tags": [
          "Products"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "required": [],
        "requestBody": {
          "description": "Information needed to proceed",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              },
              "examples": {
                "product": {
                  "value": {
                    "name": "Mouse USB",
                    "description": "brand logitech",
                    "price": 300
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized, token required"
          },
          "400": {
            "description": "product already exists"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "all products listed in one place",
        "summary": "list all products",
        "tags": [
          "Products"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "nome produto para busca",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}